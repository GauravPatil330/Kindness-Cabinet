<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CategoriesFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svCategoryFragmentSearchCategory"
        app:queryHint="Search by Category"
        app:iconifiedByDefault="false"
        android:background="@drawable/search_bg"
        android:layout_margin="10sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvCategoryFragmentShowMultipleCategory" />

    <TextView
        android:id="@+id/tvCategoryFragmentNoCategoryAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Category Available"
        android:textAlignment="center"
        android:textColor="#226DE1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/aldrich"
        android:layout_marginTop="10sp" />

</LinearLayout>